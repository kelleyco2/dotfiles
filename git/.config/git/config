	signingkey = 60063DC12E49C697DFD17276A6D2F7FAE40F1299
	email = cooper.kelley@pdq.com
[commit]
	gpgsign = true
[tag]
	gpgsign = true
[push]
	autoSetupRemote = true
[status]
	showUntrackedFiles = all
[gpg]
	program = /opt/homebrew/bin/gpg
